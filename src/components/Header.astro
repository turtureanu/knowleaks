<style lang="scss">
	@use '../styles/variables.scss' as *;
	@use '../styles/components/button.scss' as *;

	html.light {
		.logo-font {
			fill: $dark1 !important;
		}
	}
	.header-banner {
		display: flex;
		align-items: center;
		justify-content: center;
		margin: 0 auto;

		.logo-container {
			width: 85px;

			svg {
				display: block;
				width: 100%;
				height: auto;
			}
		}

		p {
			padding-left: 2.5rem;
			text-align: left;
			line-height: 2.25ch;
			font-family: $code-font;
			font-size: 2rem;
		}

		@media screen and (width >= 400px) {
			margin: 2em auto;
			margin-bottom: 1em;
			.logo-container {
				width: 100px;
			}

			p {
				font-size: 2.4rem;
			}
		}
	}

	.other-links {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		margin: 0 1em; // fixme: magic value

		.button {
			margin: 0.5em;
			height: fit-content;
			text-align: center;

			&:first-child {
				grid-row: 1;
				grid-column: span 2;
			}

			&:nth-child(2) {
				grid-row: 2;
				grid-column: 1;
			}

			&:nth-child(3) {
				grid-row: 2;
				grid-column: 2;
			}
		}
	}
</style>
